#练习

current_users = ['JORGE','ila','WAXI','ZEBU','LUOHU']
new_users = ['JORGE','waxi','yyh','wk','zdy']

current_users1 = []
for i in range(0,len(current_users)):
    current_users1.append(current_users[i].lower())

new_users1 = []
for i in range(0,len(new_users)):
    new_users1.append(new_users[i].lower())
for name in new_users1:
    if name in current_users1:
        print(f'{name} existed')
    else:
        print(f'{name} is correct')

#练习
list3 = []
for i in range(1,10):
    list3.append(i)   
for i in list3:
    if i == 1:
        print(f"{i}st\n")
    elif i == 2 :
        print(f"{i}nd\n")
    elif i == 3:
        print(f"{3}rd\n")
    else:
        print(f"{i}th\n")
